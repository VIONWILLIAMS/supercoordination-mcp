{
  "name": "supercoordination-mvp",
  "version": "1.0.0",
  "description": "超协体 MVP 1.0 工程化版本",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "start:local": "NODE_ENV=development node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "migrate:store": "node scripts/migrate-store-to-db.js",
    "setup:local": "bash scripts/setup-local.sh",
    "start:railway": "npx prisma db push && node src/server.js",
    "check:env": "bash scripts/check-env.sh",
    "check:deploy": "bash scripts/check-deploy.sh",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@prisma/client": "^5.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "prisma": "^5.18.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
